{
  "manifest_version": 3,
  "name": "API Link Opener",
  "version": "1.0",
  "action": {
    "default_icon": "icon.png",
    "default_title": "Open API Links"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "tabs", "scripting"],
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}